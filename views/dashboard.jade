extends base

block vars
	- var title = "Dashboard"

block nav_content
	a(href="/logout").user-username Logout
	h3.user-welcome Welcome  #[a(href= '/profile/?username=' + user.username).user-username #{user.username} ]


block body
	.container
		h2 Welcome to QuizApp
		.question
			h3.question-title #{body}
			form#myform(action="")
				input(type="radio", name="answer", value="A").question-check
				p#option1 #{option1}
				input(type="radio", name="answer", value="B").question-check
				p#option2 #{option2}
				input(type="radio", name="answer", value="C").question-check
				p#option3 #{option3}
				a#next-q(href="#") Next
				a#submit-q(href="#") Submit
		h3#correct
		h3 click next to start quiz
		input(type="hidden" val = correct)#correct-an
		a(href="/upload") Create a new qestion
	script(src="http://code.jquery.com/jquery-1.12.0.min.js")
	script(src="http://code.jquery.com/jquery-migrate-1.2.1.min.js")
	script(src="static/javascript/main.js")
